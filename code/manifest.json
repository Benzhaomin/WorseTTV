{
  "manifest_version": 2,
  "icons": {
    "16": "images/kappa-pride.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [{
      "matches": [
        "http://www.twitch.tv/*"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/chrome-chat.js"
      ]
  }],
  "background": {
    "scripts": [
      "js/chrome-background.js",
      "js/chrome-ui.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://www.twitch.tv/*",
    "contextMenus"
  ],
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "images/*" ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
